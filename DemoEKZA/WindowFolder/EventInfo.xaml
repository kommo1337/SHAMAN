<Window x:Class="DemoEKZA.WindowFolder.EventInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEKZA.WindowFolder"
        mc:Ignorable="d"
        Title="EventInfo" Height="450" Width="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Название мероприятия" FontSize="20" Margin="10" FontFamily="Comic Sans MS" Foreground="#0000CC"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Background="#99FFFF">
            <TextBlock Text="Дата" Margin="10" FontFamily="Comic Sans MS"/>
            <TextBlock Text="Город" Margin="10" FontFamily="Comic Sans MS"/>
            <TextBlock Text="Организатор" Margin="10" FontFamily="Comic Sans MS"/>
            <Image  Margin="10" Height="100"/>
        </StackPanel>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Описание" Margin="10" FontFamily="Comic Sans MS"/>
    </Grid>
</Window>
