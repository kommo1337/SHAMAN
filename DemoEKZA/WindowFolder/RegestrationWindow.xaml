<Window x:Class="DemoEKZA.WindowFolder.RegestrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEKZA.WindowFolder"
        mc:Ignorable="d"
         Title="Регистрация" Height="450" Width="500">
    <Grid Background="#99FFFF">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Имя пользователя:" FontFamily="Comic Sans MS" Foreground="#0000CC"/>
            <TextBox Width="200" Margin="0,0,0,15" Name="LoginTb"/>
            <Label Content="Пароль:" FontFamily="Comic Sans MS" Foreground="#0000CC"/>
            <PasswordBox Width="200" Margin="0,0,0,15" Name="PasswordPB"/>
            <Label Content="Повторите пароль:" FontFamily="Comic Sans MS" Foreground="#0000CC"/>
            <PasswordBox Width="200" Margin="0,0,0,15" />
            <Button Content="Зарегистрироваться" Width="200" Background="#0000CC" Foreground="White" FontFamily="Comic Sans MS" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
