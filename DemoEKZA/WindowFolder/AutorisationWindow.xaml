<Window x:Class="DemoEKZA.WindowFolder.AutorisationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEKZA.WindowFolder"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="500">
    <Grid Background="#99FFFF">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Имя пользователя:" FontFamily="Comic Sans MS" Foreground="#0000CC"/>
            <TextBox Width="200" Margin="0,0,0,15" Name="LoginTb"/>
            <Label Content="Пароль:" FontFamily="Comic Sans MS" Foreground="#0000CC"/>
            <PasswordBox Width="200" Margin="0,0,0,15" Name="PasswordPb"/>
            <Button Content="Войти" Width="200" Background="#0000CC" Foreground="White" FontFamily="Comic Sans MS" Margin="0,0,0,15" Click="Button_Click"/>
            <Button Content="Регестрация " Width="200" Background="#0000CC" Foreground="White" FontFamily="Comic Sans MS" Margin="0,0,0,15" Click="Button_Click_1"/>

            <Button Content="Без аккаунта" Width="200" Background="#0000CC" Foreground="White" FontFamily="Comic Sans MS"/>
            

        </StackPanel>
    </Grid>
</Window>
